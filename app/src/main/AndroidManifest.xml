<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.printerlogic.printerlogic">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />


    <application
        android:name="com.printerlogic.printerlogic.PrintService"
        android:allowBackup="true"
        android:icon="@drawable/printerlogicicon1"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/printerlogicicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.printerlogic.printerlogic.print.QRScanActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="vasion-print" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.printerlogic.printerlogic.DialogActivity"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            tools:ignore="Instantiatable" />
        <activity
            android:name="com.printerlogic.printerlogic.print.PrintPreview"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.printerlogic.printerlogic.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="printerlogicidp" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.printerlogic.printerlogic.print.BottomNavigationActivityForServerPrint"
            android:label="@string/title_activity_bottom_navigation_for_server_print" />
        <activity android:name="com.printerlogic.printerlogic.signin.GoogleLoginActivity" />
        <activity android:name="com.printerlogic.printerlogic.CustomePrintActivity" />
        <activity
            android:name="com.printerlogic.printerlogic.print.BottomNavigationActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.printerlogic.printerlogic.signin.SignInActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.printerlogic.printerlogic.signin.SignInCompany"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.printerlogic.printerlogic.signin.SplashScreenActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.printerlogic.printerlogic.jipp.QRCodeScanActivity" />
        <activity
            android:name="com.printerlogic.printerlogic.jipp.PrintActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.printerlogic.printerlogic.jipp.PrinterDiscoveryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.printerlogic.printerlogic.jipp.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service
            android:name="com.printerlogic.printerlogic.PrinterLogicPrintService"
            android:permission="android.permission.BIND_PRINT_SERVICE">
            <intent-filter>
                <action android:name="android.printservice.PrintService" />
            </intent-filter>
        </service>

        <receiver android:name="com.printerlogic.printerlogic.jipp.MyReceiver">
            <intent-filter>
                <action android:name="com.example.PRINT_RESPONSE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>